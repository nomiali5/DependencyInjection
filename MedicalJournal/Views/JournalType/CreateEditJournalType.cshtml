@model MedicalJournal.Models.JournalTypeModel
@{
    ViewBag.Title = "Create Edit Type";
}
<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Add / Edit Journal Type</div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateEditJournalType", "JournalType", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-horizontal">
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.TypeName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.TypeName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FrontImage, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        <input type="file" name="UploadImage" id="UploadImage" /> .jpg/.png/.jpeg
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-9"></div>
                    <div class="col-lg-3">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                        <button class="btn btn-success" id="Button1" type="submit">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 